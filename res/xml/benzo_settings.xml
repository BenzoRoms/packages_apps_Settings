<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/benzo_settings_title" >

        <!-- Animation Settings -->
        <PreferenceScreen
	    android:key="animation_settings"
	    android:title="@string/animation_title"
	    android:fragment="com.android.settings.benzo.animation.AnimationSettings" 
	    android:icon="@drawable/ic_xd_animation"
	    />

        <!-- AppOps -->
        <PreferenceScreen
	    android:key="app_ops_settings"
	    android:title="@string/app_ops_settings"
	    android:fragment="com.android.settings.applications.AppOpsSummary"
	    android:icon="@drawable/ic_settings_appops"
	    />

        <!-- Buttons -->
        <PreferenceScreen
	    android:id="@+id/button_settings"
	    android:fragment="com.android.settings.ButtonSettings"
	    android:title="@string/button_settings_title"
	    android:icon="@drawable/ic_settings_buttons"
	    />

        <!-- Density Changer -->
        <PreferenceScreen
            android:key="density_changer"
            android:title="@string/lcd_density_title"
            android:fragment="com.android.settings.benzo.Density"
            android:icon="@drawable/ic_dt_density"
            />

        <!-- Quick Settings -->
        <PreferenceScreen
            android:id="@+id/quick_settings"
            android:title="@string/quicksettings_title"
            android:fragment="com.android.settings.benzo.QuickSettings"
            android:icon="@drawable/ic_xd_quicksettings"
            />

        <!-- Statusbar -->
        <PreferenceScreen
            android:id="@+id/statusbar_settings"
            android:fragment="com.android.settings.benzo.StatusBarSettings"
            android:title="@string/statusbar_settings_title"
	    android:icon="@drawable/ic_settings_statusbar"
            />

        <!-- Wakelock blocker -->
        <PreferenceScreen
            android:key="wakelock_blocker"
            android:fragment="com.android.settings.benzo.WakeLockBlocker"
            android:title="@string/wakelock_blocker_title"
	    android:icon="@drawable/ic_xd_wakelock"
            />

</PreferenceScreen>

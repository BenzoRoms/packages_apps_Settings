<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/benzo_extras_notifications"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceScreen
            android:title="@string/statusbar_items_title"
            android:summary="@string/statusbar_items_summary" >
        <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.StatusbarItemsActivity" />
    </PreferenceScreen>

        <com.android.settings.preference.SecureSettingSwitchPreference
                android:key="notification_title_tint"
                android:title="@string/notification_tint_title"
                android:summaryOn="@string/notification_tint_summary_on"
                android:summaryOff="@string/notification_tint_summary_off"
                android:defaultValue="true" />

    <PreferenceCategory
        android:title="@string/breathing_notifications_title"/>

        <com.android.settings.preference.GlobalSettingSwitchPreference
            android:key="sms_breath"
            android:title="@string/sms_breath_title"
            android:summary="@string/sms_breath_summary"
            android:defaultValue="false" />

        <com.android.settings.preference.SystemSettingSwitchPreference
            android:key="missed_call_breath"
            android:title="@string/missed_call_breath_title"
            android:summary="@string/missed_call_breath_summary"
            android:defaultValue="false" />

        <com.android.settings.preference.SystemSettingSwitchPreference
            android:key="voicemail_breath"
            android:title="@string/voicemail_breath_title"
            android:summary="@string/voicemail_breath_summary"
            android:defaultValue="false" />

    <PreferenceCategory
        android:title="@string/brightness_notifications_title"/>

        <com.android.settings.preference.SecureSettingSwitchPreference
            android:key="qs_show_brightness"
            android:title="@string/show_brightness_slider_title"
            android:summary="@string/show_brightness_slider_summary"
            android:defaultValue="true" />

        <com.android.settings.preference.SystemSettingSwitchPreference
            android:key="qs_show_brightness_icon"
            android:title="@string/brightness_icon_title"
            android:summary="@string/brightness_icon_summary"
            android:dependency="qs_show_brightness"
            android:defaultValue="false"/>

    <PreferenceCategory
        android:title="@string/status_bar_header_title"/>

        <com.android.settings.preference.SystemSettingSwitchPreference
            android:key="status_bar_custom_header"
            android:title="@string/status_bar_custom_header_title"
            android:summary="@string/status_bar_custom_header_summary"
            android:defaultValue="false" />

        <ListPreference
            android:key="daylight_header_pack"
            android:title="@string/daylight_header_pack_title"
            android:persistent="false"
            android:dependency="status_bar_custom_header" />

        <com.android.settings.benzo.SeekBarPreference
            android:key="status_bar_custom_header_shadow"
            android:title="@string/status_bar_custom_header_shadow_title"
            android:summary="@string/status_bar_custom_header_shadow_summary"
            settings:max="100"
            settings:minimum="0"
            settings:units="@string/unit_percent"
            android:persistent="false"
            android:dependency="status_bar_custom_header" />

    <PreferenceCategory
        android:title="@string/pulldown_options_title"/>

        <ListPreference
            android:key="quick_pulldown"
            android:title="@string/quick_pulldown_title"
            android:entries="@array/quick_pulldown_entries"
            android:entryValues="@array/quick_pulldown_values"
            android:persistent="false" />

        <ListPreference
            android:key="smart_pulldown"
            android:title="@string/smart_pulldown_title"
            android:entries="@array/smart_pulldown_entries"
            android:entryValues="@array/smart_pulldown_values"
            android:persistent="false" />

</PreferenceScreen>

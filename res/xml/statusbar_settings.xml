<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/statusbar_settings_title">

    <PreferenceScreen
        android:fragment="com.android.settings.benzo.BatterySettings"
        android:key="battery_style_pref"
        android:title="@string/battery_title"
    	android:summary="@string/battery2_summary" />

    <PreferenceScreen
        android:key="breathing_notifications"
        android:fragment="com.android.settings.benzo.BreathingNotifications"
        android:title="@string/breathing_notifications_title" 
        android:summary="@string/breathing_notifications_summary" />

    <com.android.settings.preference.SystemSettingSwitchPreference
        android:key="status_bar_brightness_control"
        android:title="@string/status_bar_toggle_brightness"
        android:summary="@string/status_bar_toggle_brightness_summary"
        android:defaultValue="false" />

    <PreferenceScreen
        android:fragment="com.android.settings.slim.StatusBarClockStyle"
        android:key="clock_style_pref"
        android:title="@string/status_bar_clock" />

    <PreferenceScreen
        android:fragment="com.android.settings.benzo.fragments.NetworkTrafficSettings"
        android:key="nettraffic_settings"
        android:title="@string/nettraffic_settings_title"
        android:summary="@string/nettraffic_settings_summary" />

    <PreferenceScreen
            android:title="@string/status_bar_icon_blacklist_title"
            android:summary="@string/status_bar_icon_blacklist_summary" >
        <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.TunerActivity" />
    </PreferenceScreen>

    <com.android.settings.preference.SystemSettingSwitchPreference
        android:key="double_tap_sleep_gesture"
        android:title="@string/double_tap_to_sleep_title"
        android:summary="@string/double_tap_to_sleep_summary"
        android:defaultValue="false" />

    <ListPreference
        android:key="smart_pulldown"
        android:title="@string/smart_pulldown_title"
        android:entries="@array/smart_pulldown_entries"
        android:entryValues="@array/smart_pulldown_values"
        android:persistent="false" />

    <com.android.settings.preference.SystemSettingSwitchPreference
        android:key="status_bar_quick_qs_pulldown"
        android:title="@string/status_bar_quick_qs_pulldown_title"
        android:summary="@string/status_bar_quick_qs_pulldown_summary"
        android:defaultValue="true" />

</PreferenceScreen>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/statusbar_settings_title">

    <PreferenceCategory
        android:key="statusbar_options"
        android:title="@string/statusbar_options"/>

        <SwitchPreference
            android:key="status_bar_brightness_control"
            android:summary="@string/status_bar_brightness_control_summary"
            android:title="@string/status_bar_brightness_control_title" />

        <com.android.settings.preference.SystemSettingSwitchPreference
             android:key="force_expanded_notifications"
             android:title="@string/force_expanded_notifications_title"
             android:summary="@string/force_expanded_notifications_summary" />

        <com.android.settings.preference.SystemSettingSwitchPreference
            android:key="status_bar_notif_count"
            android:title="@string/status_bar_notif_count_title"
            android:summary="@string/status_bar_notif_count_summary"
            android:defaultValue="false" />

    <PreferenceCategory
        android:key="battery_settings"
        android:title="@string/status_bar_battery_style_category"/>

        <ListPreference
            android:key="status_bar_battery_style"
            android:title="@string/status_bar_battery_style_title"
            android:summary="%s"
            android:dialogTitle="@string/status_bar_battery_style_title"
            android:entries="@array/status_bar_battery_style_entries"
            android:entryValues="@array/status_bar_battery_style_values"
            android:defaultValue="0" />

        <ListPreference
            android:key="status_bar_show_battery_percent"
            android:title="@string/status_bar_battery_percentage_title"
            android:summary="%s"
            android:dialogTitle="@string/status_bar_battery_percentage_title"
            android:entries="@array/status_bar_battery_percentage_entries"
            android:entryValues="@array/status_bar_battery_percentage_values"
            android:defaultValue="0" />

        <SwitchPreference
            android:key="battery_large_text"
            android:title="@string/battery_large_text"
            android:summaryOn="@string/battery_large_text_summary_on"
            android:summaryOff="@string/battery_large_text_summary_off"
            android:defaultValue="false" />

    <PreferenceCategory
        android:key="battery_bar"
        android:title="@string/battery_bar"/>

        <ListPreference
            android:key="battery_bar_list"
            android:title="@string/battery_bar_location"
            android:entries="@array/battery_bar_entries"
            android:entryValues="@array/battery_bar_values" />

        <ListPreference
            android:key="battery_bar_style"
            android:title="@string/battery_bar_style_title"
            android:entries="@array/battery_bar_style_entries"
            android:entryValues="@array/battery_bar_style_values" />

        <SwitchPreference
            android:key="battery_bar_animate"
            android:title="@string/battery_bar_animate_title"
            android:summary="@string/battery_bar_animate_summary" />

        <ListPreference
            android:key="battery_bar_thickness"
            android:title="@string/battery_bar_thickness_title"
            android:entries="@array/battery_bar_thickness_entries"
            android:entryValues="@array/battery_bar_thickness_values" />

    <PreferenceCategory
        android:key="status_bar_benzo_logo"
        android:title="@string/status_bar_benzo_logo_title"/>

        <SwitchPreference
            android:key="status_bar_benzo_logo_show"
            android:title="@string/status_bar_benzo_logo_title" />

        <SwitchPreference
            android:key="status_bar_benzo_logo_show_on_lock_screen"
            android:title="@string/status_bar_benzo_logo_keyguard_title" />

        <ListPreference
            android:key="status_bar_benzo_logo_style"
            android:title="@string/status_bar_benzo_logo_position"
            android:dialogTitle="@string/status_bar_benzo_logo_position"
            android:entries="@array/status_bar_logo_position_entries"
            android:entryValues="@array/status_bar_logo_position_values" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="status_bar_benzo_logo_color"
            android:title="@string/status_bar_benzo_logo_color"
            android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="status_bar_benzo_logo_color_dark_mode"
            android:title="@string/status_bar_benzo_logo_color_dark_mode"
            android:defaultValue="0xff000000" />

        <SwitchPreference
            android:key="logo_hide_logo"
            android:title="@string/logo_hide_logo_title"
            android:summary="@string/logo_hide_logo_summary"
            android:persistent="false" />

        <ListPreference
            android:key="logo_number_of_notification_icons"
            android:title="@string/logo_number_of_notification_icons_title"
            android:entries="@array/logo_number_of_notifications_entries"
            android:entryValues="@array/logo_number_of_notifications_values" />

    <PreferenceCategory
        android:title="@string/carrier_label_settings_title"/>

        <ListPreference
            android:key="status_bar_show_carrier"
            android:title="@string/show_carrier_title"
            android:dialogTitle="@string/show_carrier_title"
            android:entries="@array/carrier_label_entries"
            android:entryValues="@array/carrier_label_values" />

        <PreferenceScreen
            android:key="custom_carrier_label"
            android:title="@string/custom_carrier_label_title" />

    <PreferenceCategory
        android:title="@string/status_bar_clock_title"/>

        <ListPreference
            android:key="status_bar_clock"
            android:title="@string/status_bar_clock_style_title"
            android:dialogTitle="@string/status_bar_clock_style_title"
            android:entries="@array/status_bar_clock_style_entries"
            android:entryValues="@array/status_bar_clock_style_values" />

       <ListPreference
            android:key="clock_date_position"
            android:title="@string/clock_date_position"
            android:entries="@array/clock_date_position_entries"
            android:entryValues="@array/clock_date_position_values" />

        <ListPreference
            android:key="status_bar_am_pm"
            android:title="@string/status_bar_am_pm_title"
            android:dialogTitle="@string/status_bar_am_pm_title"
            android:entries="@array/status_bar_am_pm_entries"
            android:entryValues="@array/status_bar_am_pm_values" />

        <ListPreference
            android:key="clock_date_display"
            android:title="@string/clock_date_display"
            android:summary="@string/clock_date_display_summary"
            android:entries="@array/clock_date_display_entries"
            android:entryValues="@array/clock_date_display_values" />

        <ListPreference
            android:key="clock_date_style"
            android:title="@string/clock_date_style"
            android:entries="@array/clock_date_style_entries"
            android:entryValues="@array/clock_date_style_values"
            android:dependency="clock_date_display" />

        <ListPreference
            android:key="clock_date_format"
            android:title="@string/clock_date_format"
            android:entries="@array/clock_date_format_entries_values"
            android:entryValues="@array/clock_date_format_entries_values"
            android:dependency="clock_date_display" />

</PreferenceScreen>

